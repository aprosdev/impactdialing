<% i = 1 %>
<% answer_stats.each do |question, stats| %>
  <h3>Question <%= i %>: <%= question %></h3>
    <table>
       <tr>
         <th>Answer</th>
         <th>Number</th>
         <th>Percentage</th>
       </tr>
      <% stats.each do |answers| %>
        <% answer_counter.call(answers[:number]) if defined?(answer_counter) %>
        <tr>
          <td><%= answers[:answer]%></td>
          <td><%= answers[:number]%></td>
          <td><%= answers[:percentage]%> %</td>
         </tr>
       <% end %>
    </table>
    <% i = i + 1%>
<% end %>
