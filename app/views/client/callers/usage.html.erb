<div role="main">
  <h1><%= "Usage Report" %></h1>
  <h2>for <%= @caller.identity_name %></h2>
  <%= form_tag(usage_client_caller_path(id: params[:id]), {
    method: :get
  }) do %>
    <%= render 'shared/switch_campaign' %>
    <%= render 'shared/utilization', {
      report: @caller,
      usage: @caller_usage
    } %>
    <%= render 'shared/callers_billable', {usage: @caller_usage} %>
    <%= render 'client/reports/selective_date_range_picker', {
      caller_id: @caller.try(:id),
      from_date: @date_range.from,
      to_date: @date_range.to,
      embedded: true,
      include_button: true
    } %>
  <% end %>
</div>
