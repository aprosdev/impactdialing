<%= form_for @caller, url:  client_callers_path(@caller), :method => :put do |f| -%>  
	<fieldset>
	  <%= hidden_field_tag :id, @caller.id,{:class=>"field"} %>
      <p>
        <label>Name</label>
		<%= f.text_field :name, {:class=>"field"} %>
      </p>
      <p>
        <label>Email</label>
		<%= f.text_field :email, {:class=>"field"} %>
      </p>
      <p>
        <label>Password</label>
		<%= f.text_field :password, {:class=>"field"} %>
      </p>
    </fieldset>

	<div class="buttons">
	<button type="submit">Save</button>
	</div>
<% end -%>